<%= render "shared/header" %>


<%= form_with model: @business, url:company_businesses_path, local: true do |f| %>
  <div class = "title">募集業務投稿ページ</div>
    <div class = "">業務内容</div>
      <%= f.text_area :content %>
    <div>配属部署</div>
      <%= f.text_area :department %>
    <div>期間</div>
      <%= f.text_area :period %>
    <div>報酬</div>
      <%= f.text_area :reward %>
    <div>募集人数</div>
      <%= f.text_area :number %>
      <div>企業様からのメッセージ</div>
      <%= f.text_area :comment %>
    <div>求めるスキル</div>
      <%= f.text_area :skill %>
    <%= f.submit "投稿" %>
<% end %>

<%= render "shared/footer" %>